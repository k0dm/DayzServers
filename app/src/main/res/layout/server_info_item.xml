<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/serverInfoLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/corner_radius_10"
    android:elevation="4dp"
    android:orientation="horizontal"
    app:layout_constraintCircleRadius="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/serverNameTextView"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center|start"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="[UA|EU] On The Precipice | 3PP | PvP Vanilla+ | WIP..ddd. " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/expendImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/expand_more" />

            <TextView
                android:id="@+id/playersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grey"
                android:textSize="14sp"
                tools:text="12 / 120" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/modded"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/isModdedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grey"
                android:textSize="14sp"
                tools:text="Yes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/third_person"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/isThirdPersonTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grey"
                android:textSize="14sp"
                tools:text="Yes" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/favoriteImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:src="@drawable/favorites_icon" />

</LinearLayout>